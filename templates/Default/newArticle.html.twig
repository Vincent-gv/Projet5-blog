{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Ajouter article {% endblock %}

{% block main %}
<!-- Page Top section -->
<section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
    <div class="container">
        <h2>Ajouter un article</h2>
        <div class="site-breadcrumb">
            <a href="./">Accueil</a> / <span>Ajouter un article</span>
        </div>
    </div>
</section>
<!-- Page Top section end -->

    <!-- Blog section -->
    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-post">
                        <form class="clearfix" method="post">
                            <div class="form-group mt-2">
                                {% if errorsArticle %}
                                    <div class="alert alert-primary p-4" role="alert">
                                        <h6>Veuillez corriger les erreurs suivantes :</h6>
                                        <ul  class="mt-2">
                                            {% for errorArticle in errorsArticle.error %}
                                                <li>{{ errorArticle }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endif %}
                                <label for="nom"><img src="/img/icons/edit.png" class="mr-1"> Titre de l'article :</label>
                                <input type="text" class="form-control" name="title" value="{{ formArticle.title }}">
                            </div>
                            <div class="form-group">
                                <label for="comment">Contenu :</label>
                                <textarea class="form-control" rows="5" name="content">{{ formArticle.content }}</textarea>
                                <input type="submit" class="site-btn mt-4" value="Publier">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog section end -->
{% endblock %}