{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Ajouter article {% endblock %}

{% block main %}
<!-- Page Top section -->
<section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
    <div class="container">
        <h2>Ajouter un article</h2>
        <div class="site-breadcrumb">
            <a href="./">Accueil</a> / <span>Ajouter un article</span>
        </div>
    </div>
</section>
<!-- Page Top section end -->

    <!-- Blog section -->
    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-post">
                        {% for type, messages in flashbag() %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type }}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog section end -->
{% endblock %}