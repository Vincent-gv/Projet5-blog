                                <input type="text" class="form-control title" name="title" value="{{ getPost.title }}">
                                {% if errors.title is defined %}
                                    <div class="alert alert-primary mt-2" role="alert">
                                        <ul>
                                            {% for error in errors.title %}
                                                <li>
