{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Blog {% endblock %}

{% block main %}
    <!-- Page Top section -->
    <section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
        <div class="container">
            <h2>{{ post.title }}</h2>
            <div class="site-breadcrumb">
                <a href="./">Accueil</a> / <a href="blog">Blog</a> / {{ post.title }}
            </div>
        </div>
    </section>
    <!-- Page Top section end -->
    <!-- Blog posts section -->
    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="blog-post">
                        <img src="img/blog/3.jpg" alt="" class="post-thumb">
                        {% if user() %}
                            <div class="admin-button"><a class="form-warp-link" href="./modifier?id={{ post.id }}" title="Modifier '{{ post.title }}'">Modifier</a></div>
                        {% endif %}
                        <div class="post-date">{{ post.createdAt | date('d/m/Y') }}</div>
                        <h4>{{ post.title }}</h4>
                        <div class="post-metas">
                            <div class="post-meta">Par {{ post.author }}</div>
                            <div class="post-meta">{{ countComments }} commentaire</div>
                        </div>
                        <p class="text-chapo">{{ post.chapo }}</p>
                        <p class="mt-4">{{ post.content }}</p>
                    </div>
                    <h4 class="s-title" id="comments">Commentaires <small>({{ countComments }})</small></h4>
                    {% include 'Default/_comments.html.twig' with { 'comments':comments, 'formComment':formComment, 'csrfToken':csrfToken, 'postMessage':postMessage, 'errors':errors } only %}
                </div>
                <!-- sidebar -->
                <div class="col-lg-3 col-md-5 col-sm-8 sidebar">
                    {% include 'Default/_sidebar.html.twig' %}
                </div>
            </div>
        </div>
    </section>
    <!-- Blog posts section end -->
{% endblock %}