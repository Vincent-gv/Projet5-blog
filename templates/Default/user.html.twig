{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Ajouter un administrateur{% endblock %}

{% block main %}
    <!-- Page Top section -->
    <section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
        <div class="container">
            <h2>Administration<br><small>Ajouter un compte</small></h2>
            <div class="site-breadcrumb">
                <a href="home">Accueil</a> / <span>Ajouter un compte</span>
            </div>
        </div>
    </section>
    <!-- Page Top section end -->
    <!-- Content section -->
    <section class="domain-search-section sc-connect-page">
        <div class="container connect-page">
            <div class="domain-form-warp">
                <h2>👨🏽‍🚀<small> Ajouter un administrateur</small></h2>
                <p class="mt-2 mb-4 blog-text">Création d'un nouvel utilsateur avec <strong>droits
                        administrateur</strong></p>
                <form class="domain-search-form df-white-bg mt-3" method="post">
                    {% if errors.token is defined %}
                        <div class="alert alert-warning" role="alert">
                            <ul>
                                {% for error in errors.token %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    {% if errors.user is defined %}
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                {% for error in errors.user %}
                                    <li>
                                        {{ error }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    <input type="text" placeholder="Nom d'utilisateur" name="username" value="{{ formUser.username }}"
                           class="mb-3" required>
                    <input type="email" placeholder="E-mail" name="email" value="{{ formUser.email }}"
                           class="mb-3" required>
                    <input type="password" onfocus="this.value=''" placeholder="Mot de passe" name="password"
                           value="{{ formUser.password }}" class="mb-3" required>
                    <div class="text-center">
                        <button name="connect" class="site-btn mt-3">Ajouter</button>
                    </div>
                    <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
                </form>
            </div>
        </div>
    </section>
    <!-- Content section end -->
{% endblock %}