<h4 class="s-title">Commentaires <small>(0)</small></h4>

<ul>
    {% for error in form.errors %}
    <li>{{ error }}</li>
    {% endfor %}
</ul>


<form class="clearfix" method="post">
    <div class="form-group mt-2">
        <h6><img src="/img/icons/edit.png" class="mr-1"> Ajouter un commentaire</h6>
        <label class="mt-4" for="nom">Nom ou pseudo :</label>
        <input type="text" class="form-control" name="nom">
    </div>
    <div class="form-group">
        <label for="comment">Commentaire :</label>
        <textarea class="form-control" rows="5" name="comment"></textarea>
        <input type="submit" class="site-btn mt-4" value="Envoyer">
    </div>
</form>
{% for comment in comments %}
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                    <p class="text-secondary text-center">{{ comment.createdAt }}<br>
                </div>
                <div class="col-md-10">
                    <p>
                    <div class="float-left comment-a"><strong>Maniruzzaman Akash</strong></div>
                    </p>
                    <div class="clearfix"></div>
                    <p>{{ comment.comment }}</p>
                </div>
            </div>
        </div>
    </div>
{% endfor %}