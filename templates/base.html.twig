    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
{% block body %}
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Header section -->
    <header class="header-section">
        {% block header %}
            <a href="./" class="site-logo"><img src="/img/logo.png" alt=""></a>
            <div class="nav-switch">
                <i class="fa fa-bars"></i>
            </div>
            <div class="nav-warp">
                <div class="user-panel">
                    <a href="" class="form-warp-link" data-toggle="modal" data-target="#enregistrement">Connexion</a>
                </div>
                <ul class="main-menu">
                    <li><a href="./">Accueil</a></li>
                    <li><a href="./blog">Blog</a></li>
                    <li><a href="./contact">Contact</a></li>
                    <li><a href="./poster">Poster</a></li>
                </ul>
            </div>
        {% endblock %}
    </header>

    <!-- Modal -->
    <div class="modal fade" id="enregistrement" tabindex="-1" role="dialog" aria-labelledby="enregistrement"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center lock pt-5"><img src="/img/icons/lock.png">
                    <h3 class="pt-3">Connexion</h3>
                    <div class="domain-form-warp">
                        <form class="domain-search-form  df-white-bg pt-4">
                            <input type="text" placeholder="Identifiant" class="mb-3">
                            <input type="text" placeholder="Mot de passe">
                            <div class="mt-3">
                                <button class="site-btn">Connexion</button>
                            </div>
                        </form>
                        <div class="pt-3">
                            <span>Pas encore de compte ? <a href="enregistrement">S'enregistrer</a></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal end -->
    <!-- Header section end -->
    <main>

    <!-- flashbag message -->
